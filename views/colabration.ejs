<%- include('partials/head') %>
<%- include('partials/sidebar', { currentPage: 'colabration' }) %>

<main class="main-content">
    <%- include('partials/header-title', { title: title, subtitle: subtitle }) %>

    <div class="team-management-container">
        <h3>My Team</h3>
        <div class="team-members">
            <button class="invite-button">
                <span class="material-icons">add</span>
                Invite Member
            </button>
        </div>
    </div>
    <div class="team-management-container">
        <h3>Pending Invites</h3>
        <div class="activity-feed">
            <ul>
                <li class="activity-item">
                    <span class="material-icons">mail</span>
                    <p>Invitation sent to <strong>parth@gmail.com</strong></p>
                    <span class="timestamp">2 days ago</span>
                </li>
            </ul>
        </div>
    </div>
</main>


<div id="invite-member-modal" class="modal-overlay" style="display: none;">
    <div class="modal-box">
        <h3>Invite New Member</h3>
        
        <div class="form-group" style="margin-top: 20px;">
            <label for="invite-fullname-input" style="font-weight: 600;">Full Name</label>
            <input type="text" id="invite-fullname-input" placeholder="e.g., Parth Malik" class="input-field" style="width: 100%; box-sizing: border-box; margin-top: 8px; background: var(--bg-dark);">
        </div>

        <div class="form-group" style="margin-top: 10px;">
            <label for="invite-username-input" style="font-weight: 600;">Username</label>
            <input type="text" id="invite-username-input" placeholder="e.g., parthmalik" class="input-field" style="width: 100%; box-sizing: border-box; margin-top: 8px; background: var(--bg-dark);">
        </div>

        <div class="form-group" style="margin-top: 10px;">
            <label for="invite-email-input" style="font-weight: 600;">Email</label>
            <input type="email" id="invite-email-input" placeholder="e.g., parth@example.com" class="input-field" style="width: 100%; box-sizing: border-box; margin-top: 8px; background: var(--bg-dark);">
        </div>

        <div class="button-group" style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 30px;">
            <button type="button" class="btn btn-cancel" id="invite-cancel-btn">Cancel</button>
            <button type="button" class="btn btn-save" id="invite-save-btn">Save Member</button>
        </div>
    </div>
</div>


<%- include('partials/footer', { currentPage: 'colabration' }) %>