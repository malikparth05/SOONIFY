<%- include('partials/head') %>
<%- include('partials/sidebar', { currentPage: 'shared' }) %>

<main class="main-content">
    <%- include('partials/header-title', { title: title, subtitle: subtitle }) %>

    <div class="collaboration-grid">
        <div class="shared-spaces">
            <h3>Shared Spaces</h3>
            
            <div id="spaces-list-container">
                </div>
            
            <button class="invite-button">
                <span class="material-icons">add</span>
                Create Space
            </button>
        </div>

        <div class="activity-feed">
            <h3>Recent Activity</h3>
            <ul>
                <li class="activity-item">
                    <span class="material-icons">person_add</span>
                    <p>You added <strong>Parth</strong> to Q4 Marketing Plan.</p>
                    <span class="timestamp">1h ago</span>
                </li>
                <li class="activity-item">
                    <span class="material-icons">comment</span>
                    <p><strong>Amaira</strong> commented on "Finalize new logo".</p>
                    <span class="timestamp">3h ago</span>
                </li>
            </ul>
        </div>
    </div>
</main>

<div id="create-space-modal" class="modal-overlay" style="display: none;">
    <div class="modal-box">
        <h3>Create New Shared Space</h3>
        <div class="form-group" style="margin-top: 20px;">
            <label for="space-name-input" style="font-weight: 600;">Space Name</label>
            <input type="text" id="space-name-input" placeholder="e.g., Q4 Marketing Team" class="input-field" style="width: 100%; box-sizing: border-box; margin-top: 8px; background: var(--bg-dark);">
        </div>
        <div class="form-group" style="margin-top: 10px;">
            <label for="space-desc-input" style="font-weight: 600;">Description</label>
            <textarea id="space-desc-input" placeholder="What is this space for?" class="input-field" style="width: 100%; box-sizing: border-box; margin-top: 8px; background: var(--bg-dark); min-height: 80px;"></textarea>
        </div>
        <div class="button-group" style="display: flex; justify-content: flex-end; gap: 10px; margin-top: 30px;">
            <button type="button" class="btn btn-cancel" id="cancel-space-btn">Cancel</button>
            <button type="button" class="btn btn-save" id="save-space-btn">Create</button>
        </div>
    </div>
</div>

<%- include('partials/footer', { currentPage: 'shared' }) %>