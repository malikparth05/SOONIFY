<%- include('partials/head') %>
<%- include('partials/sidebar', { currentPage: 'past' }) %>

<main class="main-content">
    
    <%- include('partials/header-tabs', { currentPage: 'past' }) %>

    <div class="search-and-filter">
        <div class="search-bar">
          <span class="material-icons">search</span> 
          <input type="text" id="search-input" placeholder="Search past events...">
        </div>
        <div class="filter-section">
          <select id="category-filter" class="filter-select" style="padding: 10px; background: var(--card-bg); color: white; border: 1px solid var(--border-color); border-radius: 8px;">
            <option value="all">Filter: All Categories</option>
            <option value="work">Work</option>
            <option value="personal">Personal</option>
            <option value="study">Study</option>
            <option value="health">Health</option>
          </select>
        </div>
    </div>

    <h2>Past Events</h2>
    <div class="event-grid" id="event-grid"></div>
</main>

<%- include('partials/modal') %>
<%- include('partials/footer', { currentPage: 'past' }) %>